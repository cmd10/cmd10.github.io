.hot-item
  position: relative
  width: 100%
  height: 100%
  z-index: 10
  figure
    position relative
    width: 100%
    background: #fefefe;
    border: 0.5px inset #fcfcfc;
    // box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
    // margin: 0 0px 5px;
    column-break-inside: avoid;
    z-index: 11

    .play
      position: absolute
      left: 40%
      right: 40%
      width: 20%
      height: auto
      top:0;
      bottom:0;
      margin:auto;
      z-index: 12

    .myvideo
      object-fit:fill
      position: relative
      width: 100%
      height: 250px
      z-index: 11
    .mylive
      object-fit:fill
      position: relative
      width: 100%
      height: 250px
      z-index: 11

    .living
      position: absolute
      width:auto
      height: auto
      right: 8%
      color: white
      top: 5%
      font-size: 13px
      font-style normal
      z-index: 13
      text-align center
      vertical-align middle
      border 2px solid
      border-color rgba(255, 255, 255, 0.6)
      border-radius 10%

    .vote
      position: absolute
      width: 40%
      height: 15px
      top: 5px
      right: 3px
      z-index: 13
      float:right
    .votenum
      position: relative
      width: auto
      height: 100%
      bottom: 0
      z-index: 13
      font-size: 15px
      color: white
      margin-right: 8%
      float: right
    .votepic
      position: relative
      width: auto
      height: 100%
      bottom: 0
      top: 0
      z-index: 13
      margin-right: 2px
      float: right

    .desc
      position: absolute
      width:100%
      height: 30px
      bottom: 0
      z-index: 12
      background: -webkit-gradient(linear, left bottom, left top, from(rgba(0, 0, 0, 1)), color-stop(0.01, rgba(0, 0, 0, 1)), to(rgba(0, 0, 0, 0))); // rgba(0, 0, 0, 0.0);
      .photo
        height 100%
        left: 1%
        position: absolute
        bottom: 0
        border-radius 50%
        z-index:13
      .title
        width: 65%
        height 48%
        left: calc(1% + 33px)
        position: absolute
        bottom: 12px
        font-size: x-small
        color: white
        z-index:13
        white-space:nowrap
        overflow: hidden
        text-overflow: ellipsis
      .like
        width: auto
        height: 80%
        position: absolute
        right: 5px
        bottom: 10%
        z-index:13

      .customer
        width: 45%
        height: auto
        position: absolute
        right: 2px
        bottom: 4px
        z-index:13
        .cusnum
          position: relative
          width: auto
          height: 100%
          bottom: 0
          z-index: 13
          font-size: 15px
          color: white
          margin-right: 4px
          float: right
        .cuspic
          position: relative
          width: auto
          height: 100%
          bottom: 0
          top: 0
          z-index: 13
          margin-right: 4px
          float: right

      .author
        width:auto
        height:48%
        left: calc(1% + 33px)
        position: absolute
        bottom: 0px
        font-size: x-small
        color: white
        z-index 13

@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.video {
  width: 100%;
  height: 100%;
  object-fit: fill;
  -webkit-touch-callout:none;
  -webkit-user-select:none;
  -khtml-user-select:none;
  -moz-user-select:none;
  -ms-user-select:none;
  user-select:none;
}
video::-webkit-media-controls-enclosure {
  display: none !important;
}
.video.-webkit-media-controls-enclosure {
  display: none !important;
}
