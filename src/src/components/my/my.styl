.myPage
  position: relative;
  margin: 0 auto 0 auto;
  width: 100%;
  height: -webkit-fill-available;
  height: -moz-fill-available;
  height: -moz-available;    /* FireFox目前这个生效 */
  height: fill-available;
  max-width: 800px;
  z-index 13
  background-color rgb(230, 230, 230)
  .myPageWrap
    position absolute
    top 0
    width 100%
    height 100%
    .myInfo
      position absolute
      background-color #0DD0F2
      top 0
      width 100%
      height 50%
      .myLoginInfo
        width 100%
        .myPhoto
          position relative
          margin 0 auto 0 auto
          top 3%
          width 35%
          left 32.5%
          border-radius 50%
        .myNickName
          position relative
          width 100%
          text-align center
          color white
          font-size 18px

        .myId
          position relative
          width 100%
          text-align center
          color white
          font-size 15px
        .loginNote
          position relative
          width 100%
          text-align center
          color white
          font-size 15px
      .myRelated
        position absolute
        display inline-flex
        width 100%
        height 45px
        bottom 0
        .myFollow
          width 33.3%
          height 100%
          color white
          .myFollowNum
            width 100%
            position relative
            text-align center
            vertical-align middle
          .myFollowDesc
            width 100%
            position relative
            text-align center
            vertical-align middle

        .myFans
          width 33.3%
          height 100%
          color white
          border-right-style 1px solid white
          border-left-style 1px solid white
          .myFansNum
            width 100%
            position relative
            text-align center
            vertical-align middle
            border-right-style: solid;
            border-right-color: white;
            border-right-width: 1px;
            border-left-style: solid;
            border-left-color: white;
            border-left-width: 1px;
          .myFansDesc
            width 100%
            position relative
            text-align center
            vertical-align middle
            border-right-style: solid;
            border-right-color: white;
            border-right-width: 1px;
            border-left-style: solid;
            border-left-color: white;
            border-left-width: 1px;
        .myMovie
          width 33.3%
          height 100%
          color white
          .myMovieNum
            width 100%
            position relative
            text-align center
            vertical-align middle
          .myMovieDesc
            width 100%
            position relative
            text-align center
            vertical-align middle
    .myCount
      background-color white
      position absolute
      width 100%
      height 45px
      top 50%
      vertical-align middle
      .myCountPic
        position relative
        left 10px
        top 30%
        height 40%
        margin-right 10px
      .myCountDesc
        position: relative;
        top: 25%
        margin-left 10px
      .myCountNextPic
        float right
        position relative
        top 35%
        height 30%
        right 10px
    .mySetting
      background-color white
      position absolute
      top calc(50% + 50px)
      width 100%
      height 45px
      .mySettingPic
        position relative
        top 30%
        height 40%
        left 10px
        margin-right 10px
      .mySettingDesc
        position: relative;
        top: 25%
        margin-left 10px
      .mySettingNextPic
        float right
        position relative
        top 35%
        height 30%
        right 10px
